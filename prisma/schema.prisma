generator client {
  provider      = "prisma-client-js"
  binaryTargets  = ["native", "linux-musl"]
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model user {
  id             Int       @id @default(autoincrement())
  name           String
  reports        reports[]
  profilepicture String?

  password String
  isAdmin  Boolean @default(false)
  rentalcarfundReportsDetails rentalcarfundReportsDetails[]
  email        String?         
  phoneNumber  String?         
  notfications notifications[]
  nationalId   String?         
  createdAt    DateTime        @default(now())
  updatedAt    DateTime        @updatedAt
}

model reports {
  id          Int     @id @default(autoincrement())
  type        String
  isPublished Boolean @default(false)
  userId      Int

  fileName    String?
  releaseDate DateTime
  user        user     @relation(fields: [userId], references: [id])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  linkUrl     String
}


model rentalcarfundReportsDetails {
  id Int @id @default(autoincrement())


revenues Int?
expenses Int?
profit Int?
withdrawen Int?
afterwithdrawen Int?
previousyear Int?
netprofit Int?
investorId Int
investor user @relation(fields: [investorId], references: [id])
CARSCount Int?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// model withdrawen{

