model rentalcarfund {
  id                Int       @id @default(autoincrement())
  daysRental        String?
  availableServices String?
  avaiableCars     String?
  branches          Int
  imageUrl          String?
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt
